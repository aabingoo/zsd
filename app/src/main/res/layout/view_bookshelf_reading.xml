<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/reading_book_cover"
        android:layout_width="@dimen/book_cover_width"
        android:layout_height="@dimen/book_cover_height"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/reading_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reading_book_cover"
        android:layout_toEndOf="@+id/reading_book_cover"
        android:layout_marginStart="24dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/reading_book_latest_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reading_book_name"
        android:layout_below="@+id/reading_book_name"
        android:layout_marginTop="16dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/reading_book_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reading_book_name"
        android:layout_below="@+id/reading_book_latest_chapter"
        android:layout_marginTop="16dp"
        android:text="10%"/>

    <TextView
        android:id="@+id/continue_reading"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/reading_book_progress"
        android:layout_marginEnd="45dp"
        android:background="@drawable/continue_reading_border"
        android:gravity="center"
        android:text="继续阅读"/>

</RelativeLayout>
