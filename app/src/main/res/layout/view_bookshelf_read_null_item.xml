<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="@dimen/read_book_top">

    <LinearLayout
        android:layout_width="@dimen/read_book_cover_width"
        android:layout_height="@dimen/read_book_cover_height"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/bs_null_read_item_bg">

        <ImageView
            android:id="@+id/bs_null_item_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/bs_null_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/read_book_name_text_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/bs_null_read_item_name"/>

    </LinearLayout>

</RelativeLayout>

