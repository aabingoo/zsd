<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:paddingTop="@dimen/inner_item_padding"
    android:paddingBottom="@dimen/inner_item_padding"
    android:gravity="center">

    <ImageView
        android:id="@+id/navigation_img"
        android:layout_width="@dimen/bookstore_navigation_size"
        android:layout_height="@dimen/bookstore_navigation_size"
        android:background="@drawable/ic_income" />

    <TextView
        android:id="@+id/navigation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/navigation_item_title_top"/>
</LinearLayout>
