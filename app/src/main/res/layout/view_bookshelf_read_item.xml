<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="@dimen/read_book_top">

    <ImageView
        android:id="@+id/read_book_cover"
        android:layout_width="@dimen/read_book_cover_width"
        android:layout_height="@dimen/read_book_cover_height"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/read_book_name"
        android:layout_width="@dimen/read_book_cover_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/read_book_name_top"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/read_book_cover"
        android:textSize="@dimen/read_book_name_text_size"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/read_book_latest_chapter"
        android:layout_width="@dimen/read_book_cover_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/read_book_name"
        android:textSize="@dimen/read_book_latest_chapter_text_size"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>