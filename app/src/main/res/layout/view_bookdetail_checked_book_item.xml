<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/color_theam">

        <ImageView
            android:id="@+id/book_cover"
            android:layout_width="@dimen/read_book_cover_width"
            android:layout_height="@dimen/read_book_cover_height"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bookdetail_checked_name_test_size"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/book_category_and_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bookdetail_checked_category_and_author_test_size"
            android:textColor="@color/color_white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tools_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/inner_item_margin_top">

        <include
            android:id="@+id/start_read"
            layout="@layout/view_bookstore_navication_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/add_to_bookshelf"
            layout="@layout/view_bookstore_navication_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/complete_catalog"
            layout="@layout/view_bookstore_navication_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/cache_book"
            layout="@layout/view_bookstore_navication_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <com.zsdang.view.ExpandableTextView
            android:id="@+id/book_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:textSize="@dimen/bookdetail_checked_desc_test_size"/>

    </LinearLayout>


    <TextView
        android:id="@+id/book_latest_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inner_item_margin_top"
        android:textSize="@dimen/bookdetail_checked_book_latest_chapter_test_size"
        android:padding="@dimen/inner_item_padding"/>

</LinearLayout>
